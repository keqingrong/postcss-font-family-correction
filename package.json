{
  "name": "postcss-font-family-correction",
  "version": "0.2.0",
  "description": "A PostCSS plugin to correct font-family values",
  "keywords": [
    "postcss",
    "css",
    "less",
    "sass",
    "scss",
    "postcss-plugin",
    "postcss-font-family-correction",
    "font-family"
  ],
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "test": "jest --coverage && eslint ."
  },
  "author": "Qingrong Ke <keqingrong1992@gmail.com>",
  "license": "MIT",
  "repository": "keqingrong/postcss-font-family-correction",
  "engines": {
    "node": ">=10.0.0"
  },
  "peerDependencies": {
    "postcss": "^8.2.8"
  },
  "devDependencies": {
    "clean-publish": "^2.1.0",
    "eslint": "^7.21.0",
    "eslint-plugin-jest": "^24.2.1",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "postcss": "^8.2.8",
    "prettier": "^2.3.2",
    "simple-git-hooks": "^2.0.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "rules": {
      "jest/expect-expect": "off"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "defaluts.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  }
}
